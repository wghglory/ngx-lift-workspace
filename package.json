{
  "name": "@ngx-lift-workspace/source",
  "version": "19.0.0",
  "license": "MIT",
  "author": "Derek Wang <guanghui-wang@foxmail.com>",
  "keywords": [
    "angular",
    "ngx-lift",
    "clr-lift"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wghglory/ngx-lift-workspace.git"
  },
  "homepage": "https://ngx-lift.netlify.app/",
  "description": "Monorepo containing ngx-lift and clr-lift - powerful Angular utility and component libraries to enhance and simplify your Angular development experience.",
  "scripts": {
    "start": "nx serve demo",
    "build": "nx run-many -t build",
    "build:libs": "nx run-many -t build --projects=ngx-lift,clr-lift",
    "build:demo": "nx build demo --configuration=production",
    "build:ngx": "nx build ngx-lift",
    "build:clr": "nx build clr-lift",
    "watch:ngx": "nx build ngx-lift --watch",
    "watch:clr": "nx build clr-lift --watch",
    "test": "nx run-many -t test",
    "test:ngx": "nx test ngx-lift",
    "test:clr": "nx test clr-lift",
    "test:coverage": "nx run-many -t test --coverage --parallel=1 && node tools/vitest/show-coverage-summary.mjs",
    "lint": "nx run-many -t lint",
    "lint:fix": "nx run-many -t lint --fix",
    "format": "prettier --write \"**/*.{ts,json,css,scss,md,html}\"",
    "format:check": "prettier --check \"**/*.{ts,json,css,scss,md,html}\"",
    "affected:test": "nx affected -t test",
    "affected:build": "nx affected -t build",
    "affected:lint": "nx affected -t lint",
    "graph": "nx graph",
    "release:version": "nx release version",
    "release:publish": "nx release publish",
    "publish:ngx": "nx build ngx-lift && cd dist/libs/ngx-lift && npm publish",
    "publish:clr": "nx build clr-lift && cd dist/libs/clr-lift && npm publish",
    "publish:all": "npm run build:libs && npm run publish:ngx && npm run publish:clr",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~20.3.0",
    "@angular/cdk": "~20.0.0",
    "@angular/common": "~20.3.0",
    "@angular/compiler": "~20.3.0",
    "@angular/core": "~20.3.0",
    "@angular/forms": "~20.3.0",
    "@angular/platform-browser": "~20.3.0",
    "@angular/platform-browser-dynamic": "~20.3.0",
    "@angular/router": "~20.3.0",
    "@cds/core": "^6.16.1",
    "@clr/angular": "^17.12.1",
    "@clr/ui": "^17.12.1",
    "angular-svg-icon": "^19.1.1",
    "highlight.js": "^11.11.1",
    "lottie-web": "^5.13.0",
    "ngx-lottie": "^20.0.0",
    "node-forge": "^1.3.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.6.3",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "~1.19.1",
    "@analogjs/vitest-angular": "~1.19.1",
    "@angular-devkit/build-angular": "~20.3.0",
    "@angular-devkit/core": "~20.3.0",
    "@angular-devkit/schematics": "~20.3.0",
    "@angular/build": "~20.3.0",
    "@angular/cli": "~20.3.0",
    "@angular/compiler-cli": "~20.3.0",
    "@angular/language-service": "~20.3.0",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-angular": "^18.4.4",
    "@eslint/js": "^9.8.0",
    "@nx/angular": "22.3.3",
    "@nx/angular-rspack": "22.0.0",
    "@nx/devkit": "22.0.0",
    "@nx/eslint": "22.0.0",
    "@nx/eslint-plugin": "22.0.0",
    "@nx/js": "22.0.0",
    "@nx/playwright": "22.0.0",
    "@nx/rspack": "22.3.3",
    "@nx/vite": "22.0.0",
    "@nx/web": "22.0.0",
    "@nx/workspace": "22.0.0",
    "@playwright/test": "^1.36.0",
    "@rspack/cli": "^1.5.0",
    "@rspack/core": "^1.5.0",
    "@rspack/dev-server": "^1.1.4",
    "@schematics/angular": "~20.3.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@tailwindcss/container-queries": "^0.1.1",
    "@types/node": "20.19.9",
    "@typescript-eslint/utils": "^8.40.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.0",
    "angular-eslint": "^20.3.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^9.0.11",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "jsonc-eslint-parser": "^2.1.0",
    "lint-staged": "^15.2.0",
    "ng-packagr": "~20.3.0",
    "nx": "22.0.0",
    "postcss": "^8.4.5",
    "postcss-url": "~10.1.3",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.13",
    "ts-node": "10.9.1",
    "tslib": "^2.6.3",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "verdaccio": "^6.0.5",
    "vite": "^7.0.0",
    "vitest": "^3.0.0"
  },
  "nx": {
    "includedScripts": []
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md,html}": [
      "prettier --write"
    ]
  }
}
